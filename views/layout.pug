html
	head
		title A Multiplayer Game
		meta(name='viewport', content='width=device-width, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0')
		link(rel='stylesheet', href='./css/style.css')
	body
		block content
		#menu
			input(type='button', value='click to go fullscreen', onclick='requestFullScreen()')
			span#playerCount
		#joystickLeft.joystick.left
		#joystickLeft.joystick.right
		canvas#gameCanvas
		script(src='./socket.io/socket.io.js')
		script(src='./js/virtualjoystick.js')
		script(src='./js/game.js')
		script(src='./js/viewport.js')
		block scripts