html
	head
		title Spectator Mode
		meta(name='viewport', content='width=device-width, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0')
	body
		| Start game
		br
		input(type='button', id='start', value="start")
		br
		br
		| Activate boss fight
		br
		input(type='button', id='boss', value="Boss Fight")
		br
		br
		| Fire
		br
		input(type='button', id='fire', value="Fire")
		br
		br
		| Double Fire/ Tentacles
		br
		input(type='button', id='doublefire', value="Double Fire")
		input(type='button', id='tentacles', value="Tentacles")
		script(src='./socket.io/socket.io.js')
		script.
			var socket = io();
			var startButton = document.getElementById('start')
			var fireButton = document.getElementById('fire')
			var doublefireButton = document.getElementById('doublefire')			
			var tentaclesButton = document.getElementById('tentacles')
			var bossButton = document.getElementById('boss')
			startButton.addEventListener("click", function(){
				var audio = new Audio('/music/Miracle_5ympho_X.mp3');
				audio.play();
			});
			fireButton.addEventListener("click", function(){
				socket.emit('shoot');
			});
			doublefireButton.addEventListener("click", function(){
				socket.emit('doubleshoot');
			});			
			tentaclesButton.addEventListener("click", function(){
				socket.emit('tentacles');
			});
			bossButton.addEventListener("click", function(){
				socket.emit('boss');
			});